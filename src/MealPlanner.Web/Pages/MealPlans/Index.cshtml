@page
@using MealPlanner.Domain.Enums
@model MealPlanner.Web.Pages.MealPlans.IndexModel
@{
    ViewData["Title"] = "Meal Planner";
    var daysOfWeek = new[] { DayOfWeek.Sunday, DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday, DayOfWeek.Saturday };
    var mealTypes = new[] { MealType.Breakfast, MealType.Lunch, MealType.Dinner, MealType.Snack };
    var previousWeek = Model.WeekStartDate.AddDays(-7);
    var nextWeek = Model.WeekStartDate.AddDays(7);
}

<form method="post">
    @Html.AntiForgeryToken()
</form>

<div class="space-y-6">
    <!-- Header with Week Navigation -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Meal Planner</h1>
            <p class="text-gray-600 mt-1">
                Week of @Model.WeekStartDate.ToString("MMMM d") - @Model.WeekStartDate.AddDays(6).ToString("d, yyyy")
            </p>
        </div>
        <div class="flex items-center gap-2">
            <a asp-page="Index" asp-route-selectedDate="@previousWeek.ToString("yyyy-MM-dd")"
               class="inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Previous
            </a>
            <a asp-page="Index"
               class="inline-flex items-center justify-center px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors font-medium">
                This Week
            </a>
            <a asp-page="Index" asp-route-selectedDate="@nextWeek.ToString("yyyy-MM-dd")"
               class="inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                Next
                <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>
        </div>
    </div>

    <!-- Weekly Planner Grid (Desktop) -->
    <div class="hidden lg:block bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="grid grid-cols-8 border-b border-gray-200">
            <div class="bg-gray-50 p-4 font-semibold text-gray-700 border-r border-gray-200">Meal</div>
            @foreach (var day in daysOfWeek)
            {
                var date = Model.WeekStartDate.AddDays((int)day);
                var isToday = date.Date == DateTime.Today;
                <div class="bg-gray-50 p-4 text-center border-r border-gray-200 @(isToday ? "bg-primary-50" : "")">
                    <div class="font-semibold text-gray-900 @(isToday ? "text-primary-700" : "")">@day.ToString().Substring(0, 3)</div>
                    <div class="text-sm text-gray-600 @(isToday ? "text-primary-600" : "")">@date.Day</div>
                </div>
            }
        </div>

        @foreach (var mealType in mealTypes)
        {
            <div class="grid grid-cols-8 border-b border-gray-200 min-h-[120px]">
                <div class="bg-gray-50 p-4 font-medium text-gray-700 border-r border-gray-200 flex items-start">
                    @mealType.ToString()
                </div>
                @foreach (var day in daysOfWeek)
                {
                    var plannedMeal = Model.GetPlannedMeal(day, mealType);
                    var date = Model.WeekStartDate.AddDays((int)day);
                    var isToday = date.Date == DateTime.Today;

                    <div class="p-3 border-r border-gray-200 hover:bg-gray-50 transition-colors @(isToday ? "bg-primary-50/30" : "")">
                        <div class="meal-slot-container min-h-[120px]">
                            <partial name="_MealSlot" model="(day, mealType, plannedMeal, Model.WeekStartDate)" />
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Mobile View -->
    <div class="lg:hidden space-y-4">
        @foreach (var day in daysOfWeek)
        {
            var date = Model.WeekStartDate.AddDays((int)day);
            var isToday = date.Date == DateTime.Today;

            <div class="bg-white rounded-lg shadow-sm overflow-hidden @(isToday ? "ring-2 ring-primary-500" : "")">
                <div class="bg-gradient-to-r from-primary-500 to-primary-600 text-white p-4 @(isToday ? "" : "from-gray-500 to-gray-600")">
                    <h3 class="font-bold text-lg">@day.ToString()</h3>
                    <p class="text-sm opacity-90">@date.ToString("MMMM d, yyyy")</p>
                    @if (isToday)
                    {
                        <span class="inline-block mt-1 text-xs bg-white/20 px-2 py-1 rounded-full">Today</span>
                    }
                </div>

                <div class="divide-y divide-gray-200">
                    @foreach (var mealType in mealTypes)
                    {
                        var plannedMeal = Model.GetPlannedMeal(day, mealType);

                        <div class="p-4">
                            <h4 class="font-medium text-gray-700 mb-2">@mealType.ToString()</h4>
                            <div class="meal-slot-container min-h-[120px]">
                                <partial name="_MealSlot" model="(day, mealType, plannedMeal, Model.WeekStartDate)" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (Model.MealPlan == null || !Model.MealPlan.PlannedMeals.Any())
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-900">No meals planned yet</h3>
            <p class="mt-2 text-gray-600">Start planning your week by adding meals to the calendar above</p>
        </div>
    }
</div>
