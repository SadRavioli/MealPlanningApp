@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <!-- Welcome Header -->
    <div class="bg-gradient-to-r from-primary-500 to-primary-700 rounded-lg p-6 text-white">
        <h1 class="text-3xl font-bold mb-2">Welcome to Meal Planner!</h1>
        <p class="text-primary-100">Plan your meals, organise recipes, and simplify your weekly shopping.</p>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a asp-area="" asp-page="/Recipes/Create" class="flex flex-col items-center justify-center px-4 py-6 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors">
                <svg class="w-8 h-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span class="text-sm font-medium">Add Recipe</span>
            </a>
            <a asp-area="" asp-page="/MealPlans/Index" class="flex flex-col items-center justify-center px-4 py-6 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                <svg class="w-8 h-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="text-sm font-medium">Plan Week</span>
            </a>
            <a asp-area="" asp-page="/Shopping/Index" class="flex flex-col items-center justify-center px-4 py-6 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                <svg class="w-8 h-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <span class="text-sm font-medium">Shopping</span>
            </a>
            <a asp-area="" asp-page="/Recipes/Index" class="flex flex-col items-center justify-center px-4 py-6 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                <svg class="w-8 h-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                <span class="text-sm font-medium">Recipes</span>
            </a>
        </div>
    </div>

    <!-- Getting Started -->
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Getting Started</h2>
        <div class="space-y-3">
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-primary-100 rounded-full p-2 mr-3">
                    <span class="text-primary-600 font-bold">1</span>
                </div>
                <div>
                    <h3 class="font-medium text-gray-900">Add your favourite recipes</h3>
                    <p class="text-gray-600 text-sm">Build your recipe collection with all your go-to meals</p>
                </div>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-primary-100 rounded-full p-2 mr-3">
                    <span class="text-primary-600 font-bold">2</span>
                </div>
                <div>
                    <h3 class="font-medium text-gray-900">Plan your week</h3>
                    <p class="text-gray-600 text-sm">Drag recipes onto your weekly meal planner</p>
                </div>
            </div>
            <div class="flex items-start">
                <div class="flex-shrink-0 bg-primary-100 rounded-full p-2 mr-3">
                    <span class="text-primary-600 font-bold">3</span>
                </div>
                <div>
                    <h3 class="font-medium text-gray-900">Generate shopping list</h3>
                    <p class="text-gray-600 text-sm">Automatically create a shopping list from your meal plan</p>
                </div>
            </div>
        </div>
    </div>
</div>
