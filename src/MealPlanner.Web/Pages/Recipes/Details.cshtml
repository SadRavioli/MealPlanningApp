@page
@using MealPlanner.Web.Extensions
@model MealPlanner.Web.Pages.Recipes.DetailsModel
@{
    ViewData["Title"] = Model.Recipe.Name;
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between gap-4">
        <div class="flex items-center gap-4">
            <a asp-page="Index" class="inline-flex items-center justify-center w-10 h-10 rounded-lg hover:bg-gray-100 transition-colors">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </a>
            <div>
                <h1 class="text-3xl font-bold text-gray-900">@Model.Recipe.Name</h1>
                @if (!string.IsNullOrEmpty(Model.Recipe.Description))
                {
                    <p class="text-gray-600 mt-1">@Model.Recipe.Description</p>
                }
            </div>
        </div>
        <div class="flex gap-2">
            <a asp-page="Edit" asp-route-id="@Model.Recipe.Id" class="inline-flex items-center px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors font-medium">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
            </a>
        </div>
    </div>

    <!-- Recipe Info Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-lg shadow-sm p-6 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-100 text-primary-600 rounded-full mb-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="text-2xl font-bold text-gray-900">@Model.Recipe.PrepTimeMinutes min</div>
            <div class="text-sm text-gray-600 mt-1">Prep Time</div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-100 text-primary-600 rounded-full mb-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                </svg>
            </div>
            <div class="text-2xl font-bold text-gray-900">@Model.Recipe.CookTimeMinutes min</div>
            <div class="text-sm text-gray-600 mt-1">Cook Time</div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6 text-center">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-primary-100 text-primary-600 rounded-full mb-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
            <div class="text-2xl font-bold text-gray-900">@Model.Recipe.ServingSize</div>
            <div class="text-sm text-gray-600 mt-1">Servings</div>
        </div>
    </div>

    <!-- Ingredients -->
    @if (Model.Recipe.Ingredients.Any())
    {
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Ingredients</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                @foreach (var ingredient in Model.Recipe.Ingredients)
                {
                    <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                        <div class="flex-shrink-0 w-2 h-2 bg-primary-500 rounded-full"></div>
                        <div class="flex-1">
                            <span class="font-medium text-gray-900">@ingredient.Quantity.FormatWithUnit(ingredient.Unit)</span>
                            <span class="text-gray-700">@ingredient.IngredientName</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Ingredients</h2>
            <div class="text-center py-8 text-gray-500">
                <p>No ingredients added yet</p>
            </div>
        </div>
    }

    <!-- Instructions -->
    @if (!string.IsNullOrEmpty(Model.Recipe.Instructions))
    {
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Instructions</h2>
            <div class="prose max-w-none">
                <p class="text-gray-700 whitespace-pre-line">@Model.Recipe.Instructions</p>
            </div>
        </div>
    }

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3 pb-6">
        <a asp-page="Edit" asp-route-id="@Model.Recipe.Id" class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit Recipe
        </a>
        <form method="post" asp-page="Index" asp-page-handler="Delete" asp-route-id="@Model.Recipe.Id" class="flex-1 sm:flex-none" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
            <button type="submit" class="w-full inline-flex items-center justify-center px-6 py-3 border border-red-500 text-red-600 rounded-lg hover:bg-red-50 transition-colors font-medium">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete Recipe
            </button>
        </form>
    </div>
</div>
