@page
@model MealPlanner.Web.Pages.Recipes.CreateModel
@{
    ViewData["Title"] = "Create Recipe";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center gap-4">
        <a asp-page="Index" class="inline-flex items-center justify-center w-10 h-10 rounded-lg hover:bg-gray-100 transition-colors">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Create New Recipe</h1>
            <p class="text-gray-600 mt-1">Add a new recipe to your collection</p>
        </div>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-lg shadow-sm p-6">
        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg"></div>

            <!-- Basic Information -->
            <div class="space-y-4">
                <h2 class="text-xl font-semibold text-gray-900">Basic Information</h2>

                <div>
                    <label asp-for="Recipe.Name" class="block text-sm font-medium text-gray-700 mb-2">Recipe Name</label>
                    <input asp-for="Recipe.Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="e.g., Spaghetti Bolognese" />
                    <span asp-validation-for="Recipe.Name" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="Recipe.Description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea asp-for="Recipe.Description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none" placeholder="A brief description of your recipe..."></textarea>
                    <span asp-validation-for="Recipe.Description" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="Recipe.Instructions" class="block text-sm font-medium text-gray-700 mb-2">Instructions</label>
                    <textarea asp-for="Recipe.Instructions" rows="8" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none" placeholder="Step-by-step instructions..."></textarea>
                    <span asp-validation-for="Recipe.Instructions" class="text-red-600 text-sm mt-1"></span>
                </div>
            </div>

            <!-- Time and Servings -->
            <div class="space-y-4">
                <h2 class="text-xl font-semibold text-gray-900">Details</h2>

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div>
                        <label asp-for="Recipe.PrepTimeMinutes" class="block text-sm font-medium text-gray-700 mb-2">Prep Time (minutes)</label>
                        <input asp-for="Recipe.PrepTimeMinutes" type="number" min="0" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="15" />
                        <span asp-validation-for="Recipe.PrepTimeMinutes" class="text-red-600 text-sm mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Recipe.CookTimeMinutes" class="block text-sm font-medium text-gray-700 mb-2">Cook Time (minutes)</label>
                        <input asp-for="Recipe.CookTimeMinutes" type="number" min="0" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="30" />
                        <span asp-validation-for="Recipe.CookTimeMinutes" class="text-red-600 text-sm mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Recipe.ServingSize" class="block text-sm font-medium text-gray-700 mb-2">Servings</label>
                        <input asp-for="Recipe.ServingSize" type="number" min="1" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="4" />
                        <span asp-validation-for="Recipe.ServingSize" class="text-red-600 text-sm mt-1"></span>
                    </div>
                </div>
            </div>

            <!-- Ingredients Section -->
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-900">Ingredients</h2>
                    <button type="button"
                            onclick="addIngredient('/Recipes/Create')"
                            class="inline-flex items-center px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors text-sm font-medium">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Ingredient
                    </button>
                </div>

                <div id="ingredients-container" class="space-y-3">
                    <!-- Ingredient rows will be added here -->
                </div>

                <div id="no-ingredients-message" class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <p class="mt-2 text-sm text-gray-600">No ingredients added yet</p>
                    <p class="text-xs text-gray-500 mt-1">Click "Add Ingredient" to get started</p>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex flex-col-reverse sm:flex-row gap-3 pt-4 border-t">
                <a asp-page="Index" class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium">
                    Cancel
                </a>
                <button type="submit" class="flex-1 sm:flex-none inline-flex items-center justify-center px-6 py-3 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors font-medium shadow-sm">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Create Recipe
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/recipe-ingredients.js"></script>
}
