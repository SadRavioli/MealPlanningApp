@page
@model MealPlanner.Web.Pages.Recipes.CreateModel
@{
    ViewData["Title"] = "Create Recipe";
}

<h1>Create New Recipe</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Recipe.Name" class="control-label"></label>
                <input asp-for="Recipe.Name" class="form-control" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Recipe.Description" class="control-label"></label>
                <textarea asp-for="Recipe.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Recipe.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Recipe.Instructions" class="control-label"></label>
                <textarea asp-for="Recipe.Instructions" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Recipe.Instructions" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Recipe.PrepTimeMinutes" class="control-label">Prep Time (minutes)</label>
                        <input asp-for="Recipe.PrepTimeMinutes" class="form-control" type="number" />
                        <span asp-validation-for="Recipe.PrepTimeMinutes" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Recipe.CookTimeMinutes" class="control-label">Cook Time (minutes)</label>
                        <input asp-for="Recipe.CookTimeMinutes" class="form-control" type="number" />
                        <span asp-validation-for="Recipe.CookTimeMinutes" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Recipe.ServingSize" class="control-label">Servings</label>
                        <input asp-for="Recipe.ServingSize" class="form-control" type="number" />
                        <span asp-validation-for="Recipe.ServingSize" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <h3 class="mt-4">Ingredients</h3>
            <p class="text-muted">TODO: Add dynamic ingredient list with HTMX later</p>
            <p class="text-muted">For now, we'll need to add this functionality</p>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
