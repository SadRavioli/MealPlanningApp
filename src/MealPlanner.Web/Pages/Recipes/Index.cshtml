@page
@model MealPlanner.Web.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "Recipes";
}

<div class="container">
    <h1>My Recipes</h1>

    <p>
        <a asp-page="Create" class="btn btn-primary">Create New Recipe</a>
    </p>

    @if (Model.Recipes.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Prep Time</th>
                    <th>Cook Time</th>
                    <th>Servings</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recipe in Model.Recipes)
                {
                    <tr>
                        <td>@recipe.Name</td>
                        <td>@recipe.PrepTimeMinutes min</td>
                        <td>@recipe.CookTimeMinutes min</td>
                        <td>@recipe.ServingSize</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@recipe.Id">Edit</a> |
                            <a asp-page="Details" asp-route-id="@recipe.Id">Details</a> |
                            <form method="post" asp-page-handler="Delete" asp-route-id="@recipe.Id" style="display:inline;">
                                <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure you want to delete this recipe?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No recipes found. <a asp-page="Create">Create your first recipe!</a></p>
    }
</div>
